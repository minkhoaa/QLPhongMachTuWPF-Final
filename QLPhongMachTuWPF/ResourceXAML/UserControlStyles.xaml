    <!--datagrid-->
    <Style  x:Key="gridEditBtn" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>

        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="5" BorderThickness="0" BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="gridRemoveBtn" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!-- Thay đổi con trỏ khi rê chuột -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder" 
                    Background="{TemplateBinding Background}" 
                    CornerRadius="5" 
                    Padding="5" 
                    BorderThickness="0" 
                    BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Hover trạng thái -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#D3D3D3"/>
                            <!-- Màu nền khi hover -->
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#A9A9A9"/>
                            <!-- Đường viền khi hover -->
                        </Trigger>

                        <!-- Pressed trạng thái -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#B0B0B0"/>
                            <!-- Màu nền khi nhấn -->
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#808080"/>
                            <!-- Đường viền khi nhấn -->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="textBlockDatagrid" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>
</ResourceDictionary>